#include<stdio.h>
int main()
{
int i, j, k, num;
printf("Masukkan angka : ");
scanf("%d", &num);
printf("\n");
for(i = num; i >= 1; i--)
{
for(k = i; k < num; k++)
{
printf(" ");
}
for(j = 1; j <= (2*i-1); j++)
{
if(i == num || j == 1 || j == (2*i-1))
{
printf("*");
}
else
{
printf(" ");
}
}
printf("\n");
}
return 0;
}
